<p>Sign up</p>
<form method='POST'>
    <div class="form-group">
        <label for="signupName">Name</label>
        <input type="text" name="name" class="form-control" id="signupName" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="signupEmail">Email address</label>
        <input type="email" name="email" class="form-control" id="signupEmail" placeholder="Enter email">
        <% if ( message ) { %>
            <div class="flash"><%= message %></div>
        <% } %>
    </div>
    <div class="form-group">
        <label for="signupPassword">Password</label>
        <input type="password" name="password" class="form-control" id="signupPassword" placeholder="Enter password">
    </div>
    <div class="form-group">
        <label for="signupPassword">Target Email</label>
        <input type="email" name="targetEmail" class="form-control" id="signupTargetEmail" placeholder="Enter targeted email">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
